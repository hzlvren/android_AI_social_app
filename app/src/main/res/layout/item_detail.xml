<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/imageView"
            android:src="@drawable/basketball_2"
            android:layout_width="match_parent"
            android:layout_height="460dp"
            android:scaleType="centerCrop" />

        <TextView
            android:id="@+id/textViewTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="8sp"
            android:text="凯里欧文来了"
            android:textSize="16sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/textViewContent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="hello!world!"
            android:paddingLeft="10dp"
            android:paddingRight="8dp"
            android:textSize="12sp"
            android:layout_marginTop="0dp" />

        <TextView
            android:id="@+id/dataTime"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="2024-10-29 浙江"
            android:paddingTop="20dp"
            android:paddingBottom="20dp"
            android:paddingLeft="10dp"
            android:paddingRight="8dp"
            android:textSize="8sp"
            android:layout_marginTop="0dp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#BDBDBD"
            android:layout_marginTop="0dp"
            android:layout_marginBottom="0dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="18dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/redbook"
                android:src="@drawable/redbook"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginLeft="12dp"
                android:background="@drawable/circular_image"
                android:clipToOutline="true"
                android:scaleType="centerCrop" />

            <EditText
                android:id="@+id/searchInput"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:hint=" 有话要说， 快来评论"
                android:background="@drawable/redbook_box_background"
                android:textColor="@android:color/black"
                android:textSize="16sp"
                android:padding="8dp"
                android:layout_marginLeft="20dp"
                android:singleLine="true" />

            <Button
                android:id="@+id/sendButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="4dp"
                android:backgroundTint="@color/red"
                android:text="发送" />
        </LinearLayout>
    </LinearLayout>
</ScrollView>
