<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="16dp"
    android:layout_marginTop="8dp"
    android:gravity="center_horizontal"
    android:elevation="6dp">

    <LinearLayout
        android:background="@color/light_gray"
        android:layout_width="260dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:orientation="vertical"
        android:padding="10dp">

        <ImageView
            android:id="@+id/themeImage"
            android:layout_width="250dp"
            android:layout_height="230dp"
            android:layout_gravity="center"
            android:contentDescription="Theme Image"
            android:scaleType="centerCrop"
            android:src="@drawable/wrx" />

        <TextView
            android:id="@+id/themeName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="12dp"
            android:text="Theme Name"
            android:textColor="#333333"
            android:textSize="18sp" />

        <Button
            android:id="@+id/selectThemeButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="8dp"
            android:backgroundTint="@color/blue_gray"
            android:text="我想要这个主题"
            android:textColor="#FFFFFF" />
    </LinearLayout>
</LinearLayout>
