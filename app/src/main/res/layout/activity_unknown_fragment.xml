<androidx.drawerlayout.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- 主界面内容 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="8dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:background="@color/white">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:text="ChatGpt 3.5"
                android:textSize="25sp"
                android:gravity="center"/>

            <ImageView
                android:id="@+id/moreOptions"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/baseline_format_list_bulleted_24"
                android:contentDescription="@string/setting"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:layout_marginEnd="16dp"/>
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="13"
            android:padding="8dp">

            <!-- GPT 图片，初始状态为 GONE，居中显示 -->
            <ImageView
                android:id="@+id/gptImage"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:src="@drawable/gpt2"
                android:layout_centerInParent="true"
                android:visibility="gone"/>  <!-- 初始状态为 gone -->

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recyclerView"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="8dp"/>

        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:padding="8dp">

            <EditText
                android:id="@+id/inputText"
                android:layout_width="260dp"
                android:layout_height="wrap_content"
                android:hint="请输入问题..."
                android:padding="8dp"
                android:background="@drawable/chat_edittext_background"/>

            <Button
                android:id="@+id/sendButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:backgroundTint="@color/blue_gray"
                android:text="发送" />
        </LinearLayout>
    </LinearLayout>

    <!-- 侧边栏内容 -->
    <com.google.android.material.navigation.NavigationView
        android:id="@+id/nav_view"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="start">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <!-- 固定的顶部部分 -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="16dp"
                android:text="历史询问记录"
                android:textSize="18sp"
                android:textStyle="bold"
                android:background="@color/white" />

            <!-- 灰色间隔行 -->
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@android:color/darker_gray" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="10dp">

                <ImageView
                    android:id="@+id/new_image"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:background="@drawable/circular_image"
                    android:clipToOutline="true"
                    android:src="@drawable/gpt" />

                <TextView
                    android:id="@+id/new_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:text="ChatGPT"
                    android:layout_gravity="center"
                    android:textSize="15sp"
                    android:textColor="@android:color/black"/>
            </LinearLayout>

            <!-- 灰色间隔行 -->
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@android:color/darker_gray" />

            <!-- 中间部分可以滚动 -->
            <androidx.core.widget.NestedScrollView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:fillViewport="true">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <!-- 动态添加历史记录的容器 -->
                    <LinearLayout
                        android:id="@+id/historyContainer"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"/>

                </LinearLayout>
            </androidx.core.widget.NestedScrollView>

            <!-- 灰色间隔行 -->
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@android:color/darker_gray" />

            <!-- 固定的底部部分 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="10dp">

                <ImageView
                    android:id="@+id/userInfo"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:background="@drawable/circular_image"
                    android:src="@drawable/wrx"
                    android:clipToOutline="true"/>

                <TextView
                    android:id="@+id/username"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:text="lin林先生"
                    android:layout_gravity="center"
                    android:textSize="15sp"
                    android:textColor="@android:color/black"/>
            </LinearLayout>

            <!-- 底部感谢信息 -->
            <TextView
                android:id="@+id/footer_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="16dp"
                android:text="感谢你使用我们的应用--lz"
                android:textSize="14sp"
                android:textColor="@android:color/darker_gray" />

        </LinearLayout>

    </com.google.android.material.navigation.NavigationView>

</androidx.drawerlayout.widget.DrawerLayout>
