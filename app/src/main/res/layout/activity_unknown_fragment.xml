<androidx.drawerlayout.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- 主界面内容 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="8dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@color/white"
            android:padding="8dp"
            android:elevation="1dp">

            <ImageView
                android:id="@+id/moreOptions"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/chat_setting"
                android:contentDescription="@string/setting"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:layout_marginEnd="16dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="轻享 AI"
                android:textSize="22sp"
                android:layout_marginLeft="16dp"
                android:gravity="center_vertical"
                android:textColor="@color/black"/> <!-- 设置文本颜色 -->
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="13"
            android:padding="8dp">

            <!-- GPT 图片，初始状态为 GONE，居中显示 -->
            <ImageView
                android:id="@+id/gptImage"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/gpt2"
                android:layout_centerInParent="true"
                android:visibility="visible"/>  <!-- 初始状态为 visible -->

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recyclerView"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingLeft="8dp"
                android:paddingRight="8dp"/>

        </RelativeLayout>

        <!-- 新增的消息框 -->
        <LinearLayout
            android:id="@+id/messageContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:visibility="visible"
            android:padding="8dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:padding="8dp">

                <!-- 第一个框框 -->
                <TextView
                    android:id="@+id/message1"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="40dp"
                    android:background="@drawable/rounded_chat"
                    android:layout_marginRight="10dp"
                    android:text="你好鸭🦆！很高兴见到你"
                    android:padding="8dp" />

                <!-- 第二个框框 -->
                <TextView
                    android:id="@+id/message2"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="40dp"
                    android:background="@drawable/rounded_chat"
                    android:text="🏫 浙农林在哪? 🏫"
                    android:padding="8dp" />
            </LinearLayout>

        <TextView
            android:id="@+id/message3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/rounded_chat"
            android:padding="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:text="中国男足❤️🧡💛是否晋级2026年美加墨世界杯🏆呢"
            android:clickable="true"
            android:focusable="true"/>
    </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:padding="8dp">

            <EditText
                android:id="@+id/inputText"
                android:layout_width="0dp"
                android:layout_weight="7.6"
                android:layout_height="50dp"
                android:background="@drawable/chat_edittext_background"
                android:hint=" 消息..."
                android:padding="8dp" />

            <ImageView
                android:id="@+id/sendButton"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="42dp"
                android:scaleType="centerCrop"
                android:src="@drawable/chat_send"
                android:background="@drawable/circular_image"
                android:clipToOutline="true"
                android:layout_marginStart="20dp" />
        </LinearLayout>
    </LinearLayout>

    <!-- 侧边栏内容 -->
    <com.google.android.material.navigation.NavigationView
        android:id="@+id/nav_view"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="start">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <!-- 固定的顶部部分 -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="16dp"
                android:text="历史询问记录"
                android:textSize="18sp"
                android:textStyle="bold"
                android:background="@color/white" />

            <!-- 灰色间隔行 -->
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@android:color/darker_gray" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="10dp">

                <ImageView
                    android:id="@+id/new_image"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:background="@drawable/circular_image"
                    android:clipToOutline="true"
                    android:src="@drawable/gpt" />

                <TextView
                    android:id="@+id/new_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:text="ChatGPT"
                    android:layout_gravity="center"
                    android:textSize="15sp"
                    android:textColor="@android:color/black"/>
            </LinearLayout>

            <!-- 灰色间隔行 -->
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@android:color/darker_gray" />

            <!-- 中间部分可以滚动 -->
            <androidx.core.widget.NestedScrollView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:fillViewport="true">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <!-- 动态添加历史记录的容器 -->
                    <LinearLayout
                        android:id="@+id/historyContainer"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"/>

                </LinearLayout>
            </androidx.core.widget.NestedScrollView>

            <!-- 灰色间隔行 -->
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@android:color/darker_gray" />

            <!-- 固定的底部部分 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="10dp">

                <ImageView
                    android:id="@+id/userInfo"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:background="@drawable/circular_image"
                    android:src="@drawable/wrx"
                    android:clipToOutline="true"/>

                <TextView
                    android:id="@+id/username"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:text="lin林先生"
                    android:layout_gravity="center"
                    android:textSize="15sp"
                    android:textColor="@android:color/black"/>
            </LinearLayout>

            <!-- 底部感谢信息 -->
            <TextView
                android:id="@+id/footer_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="16dp"
                android:text="感谢你使用我们的应用--lz"
                android:textSize="14sp"
                android:textColor="@android:color/darker_gray" />

        </LinearLayout>

    </com.google.android.material.navigation.NavigationView>

</androidx.drawerlayout.widget.DrawerLayout>