<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- 按下时的背景颜色，深蓝色 -->
    <item android:state_pressed="true" android:drawable="@color/cyan"/>
